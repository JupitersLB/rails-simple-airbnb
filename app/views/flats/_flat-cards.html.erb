<div class="my-card-deck">
    <% @flats.each do |flat| %>
      <div class="card card-shadow">
        <img src="<%= flat.picture_url %>" class="card-img-top" alt="house">
        <div class="card-content">
          <div class="card-body align-items-center">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <div class="row align-middle justify-content-around">
              <p class="card-text"><i class="fas fa-user mr-1"></i><%= flat.number_of_guests %></p>
              <p class="card-text"><i class="fas fa-usd"></i><%= flat.price_per_night %></p>
            </div>
          </div>
          <div class="card-footer">
            <%= link_to 'More info', flat_path(flat), class: 'btn btn-outline-dark' %>
            <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-outline-dark' %>
            <%= link_to 'Delete',
                          flat_path(flat),
                          method: :delete,
                          data: { confirm: "Are you sure?" },
                          class: 'btn btn-outline-dark' %>
          </div>
        </div>
      </div>
    <% end %>
    </div>
